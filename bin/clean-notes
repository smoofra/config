#!/usr/bin/python
# -*- coding: utf-8 -*-


delete_unused = False

import subprocess
import argparse
import os

notesdir = os.path.expanduser('~/Nextcloud/Notes')

proc = subprocess.Popen(['fdupes', 'media', 'attachments'],
                        stdout = subprocess.PIPE, cwd=notesdir)

seen = set()
groups = list()
cur = list()
for line in proc.stdout:
    line = line.strip()
    if line:
        seen.add(line)
        cur.append(line)
    else:
        if cur:
            groups.append(cur)
        cur = list()
if cur:
    groups.append(cur)

if proc.wait() != 0:
    raise Exception


if delete_unused:
    for dirname in ('media', 'attachments'):
        for filename in os.listdir(dirname):
            path = os.path.join(dirname, filename)
            if path not in seen:
                groups.append([path])


markdowns = dict()
for root, dirs, files in os.walk(notesdir):
   for name in files:
       if name.endswith('.md'):
           path = os.path.join(root, name)
           with open(path, 'r') as f:
               markdowns[path] = f.read()


def delete(x):
    #print "rm", x
    os.unlink(x)    
               
for group in groups:
    seen = set()
    for name in group:
        if any(name in md for md in markdowns.itervalues()):
            seen.add(name)
            print name, "✓"
        else:
            print name, "✘"
    if seen:
        for name in group:
            if name not in seen:
                delete(os.path.join(notesdir, name))

    else:
        if delete_unused:
            for name in group:
                delete(os.path.join(notesdir, name))
        else:
            for name in group[1:]:
                delete(os.path.join(notesdir, name))

    print
    

    

