#!/usr/bin/env python3

import os
import sys
import argparse

parser = argparse.ArgumentParser()
parser.add_argument("-r", "--reverse", action='store_true')
parser.add_argument("-s", "--symmetric", action='store_true')
parser.add_argument("-i", "--intersection", action='store_true')
parser.add_argument("--split", action='store_true')
parser.add_argument("--sums", action='store_true')
parser.add_argument("--normpath", action='store_true')
parser.add_argument("-u", "--unified-diff", action='store_true')
parser.add_argument("a")
parser.add_argument("b")
args = parser.parse_args()

class mystring(str):
    line : str

if args.sums:

    def readset(f):
        s = set()
        for line in f:
            line = line.strip()
            hash, extra = line.split(None, 1)
            string = mystring(hash)
            string.line = line
            s.add(string)
        return s

elif args.split:
    
    def readset(f):
        s = set()
        for x in f:
            for y in x.strip().split():
                s.add(y)
        return s

elif args.normpath:

    def readset(f):
        s = set()
        for p in f:
            s.add(os.path.normpath(os.path.join('/', p.strip())))
        return s
            
else:

    def readset(f):
        s = set()
        for x in f:
            s.add(x.strip())
        return s


with open (args.a, 'r') as f:
    a = readset(f)
    
with open (args.b, 'r') as f:
    b = readset(f)

if args.reverse:
    a, b = b, a

def show(x, sign):
    if isinstance(x, mystring):
        x = x.line
    if args.unified_diff:
        print(sign, x)
    else:
        print(x)

        
#print >>sys.stderr, len(a), len(b)

if args.intersection:
    if args.unified_diff:
        parser.error("--intersection not compatibile with --unified-diff")
    for x in a & b:
        show(x, sign=None)

else:

    def i():
        for x in a - b:
            yield (x, '-')
        if args.symmetric:
            for x in b - a:
                yield (x, '+')

    for x,sign in sorted(i(), key=lambda p: p[0].lower()):
        show(x,sign)

