#!/usr/bin/perl -w

my $euid = $>;

my @repos = grep { $_ !~ /^\.{1,2}$/ } glob "$ENV{HOME}/repos.tocheck/*";

if (`hostname` =~ /^ \s* cthulhu (\.elder-gods\.org)? \s* $/x) {
  if ($euid == 0) {
    push @repos, qw: /etc/ /home/meghan/public_html :;
  } else {
    print "NOT ROOT\n\n";
  }
}


for $repo (@repos) {
  while (-l $repo) {
    $repo = readlink $repo; 
  }
  chdir '/home/larry' or die $!;
  chdir $repo or die $!; 
  my $out = `git status`; 
  if ($out !~ /nothing to commit \(working directory clean\)/) {
    print "******  $repo\n";
    print "============================================================\n";
    print "$out";
    print "============================================================\n\n";
  }
}

