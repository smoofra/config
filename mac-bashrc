
[[ -e ~/bin/addpath ]] && PATH=$(~/bin/addpath "$HOME/bin" "$PATH" /usr/local/bin /usr/local/sbin )

if which gls >/dev/null ; then
	alias ls='gls --color=auto'
fi

if which grm >/dev/null ; then
	alias rm=grm
fi

if [[ ! -z "$INSIDE_EMACS" ]] ; then
    export TERM=vt100
fi

export PS1='\u@\h:\w$ '

alias rerc='. ~/.bashrc'
