
set username "larry"
set hostname "elder-gods.org"
set realname "Larry D'Anna"

set replyto  "Larry D'Anna <larry@elder-gods.org"

server "news.gmane.org" ".jnewsrc"


%
%% 10. Group mode key bindings
%

% Cursor movement:
setkey group line_down        "<Down>"   % Go to the next group
setkey group line_down        "j"
setkey group line_up          "<Up>"   % Go to the previous group
setkey group line_up          "k"
setkey group page_down        "<PageDown>"
setkey group page_up          "<PageUp>"



%% 11. Article mode key bindings
%

% General movement:
setkey article next                    "n" 
setkey article previous                "p" 

setkey article header_line_up                      "K" 
setkey article header_line_down                    "J" 

setkey article delete                    "D" 
setkey article undelete                  "U" 

setkey article article_page_down                 "d" 
setkey article article_page_up                   "u" 
setkey article article_line_down               "j"
setkey article article_line_up                 "k"

setkey article delete_thread                   "^t"


setkey article quit "Q"
setkey article hide_article "q"
setkey article hide_article "h"

